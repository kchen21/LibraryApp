<h1>Contact Us</h1>

{{#if responseMessage}}
  <div class="alert alert-success">
    <h4>We have received your message and will get in touch soon.</h4>
    <p>From: {{model.email}}</p>
    <p>Message: {{model.message}}</p>
    <p>Reference ID: {{model.id}}</p>
  </div>

{{else}}

  <form>
    <div class="form-group has-feedback {{if model.isValidEmail 'has-success'}}">
      {{input type="email" value=model.email class="form-control" placeholder="Please enter your email address." autofocus="autofocus"}}
      {{#if model.isValidEmail}}
        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      {{/if}}
    </div>
    <div class="form-group has-feedback {{if model.isValidMessage 'has-success'}}">
      {{textarea value=model.message class="form-control" placeholder="Your message (at least 5 characters)" rows="7"}}
      {{#if model.isValidMessage}}
        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      {{/if}}
    </div>
    <button type="submit" class="btn btn-default" disabled={{model.isDisabled}} {{action 'sendMessage' model}}>Send</button>
  </form>

{{/if}}
