<h1>Contact Us</h1>

{{#if responseMessage}}
<div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

<form>
  <div class="form-group">
    {{input type="email" value=emailAddress class="form-control" placeholder="Please enter your email address." autofocus="autofocus"}}
  </div>
  <div class="form-group">
    {{textarea value=message class="form-control" placeholder="Your message (at least 5 characters)" rows="7"}}
  </div>
  <button type="submit" class="btn btn-default" disabled={{isDisabled}} {{action 'sendMessage'}}>Send message</button>
</form>
